#!/bin/bash

set -e

echo running pre-push hooks

cd "$(git rev-parse --show-toplevel)/frontend"
npm run lint
cd "$(git rev-parse --show-toplevel)/integration_tests"
pyflakes .

RESULT=$?

if [ $RESULT -ne 0 ]; then
    echo lint plz
    exit 1 # push will not execute
fi

exit 0 # push will execute

